<!--Structure has been inspired by Maven, of course-->

<extensionManager>
  
  <pluginSources>
    <!--Plugins from WinSW dll-->
    <builtIn>
      <groupIds>
        <groupId>Synopsys.ARC.WinSW</groupId>
      </groupIds>
    </builtIn>
    <!--Plugins from local DLLs-->
    <localDll>
      <path>plugins/Synopsys.DWARC.WinSW.Plugins.SharedDirectoryMapper.dll</path>
      <groupIds>
        <groupId>Synopsys.ARC.WinSW</groupId>
      </groupIds>
    </localDll> 
    <!--TODO: Download plugins using URL-->
  </pluginSources>

  <extensions>
    <plugin name="WorkspaceMapper">
      <groupId>Synopsys.ARC.WinSW</groupId>
      <artifactId>SharedDirectoryMapper</artifactId>
      <version>1.0</version>
      <parameters>
        <directoryUNC>\\testWorkspace</directoryUNC>
        <driveLabel>N:</driveLabel>
      </parameters>
      <goals>
        <goal>START</goal>
        <goal>STOP</goal>
      </goals>
    </plugin> 
    
    <plugin name="ToolsDirectoryMapper">
      <groupId>Synopsys.ARC.WinSW</groupId>
      <artifactId>SharedDirectoryMapper</artifactId>
      <version>1.0</version>
      <parameters>
        <directoryUNC>\\testTools</directoryUNC>
        <driveLabel>M:</driveLabel>
      </parameters>
      <goals>
        <goal>START</goal>
        <goal>STOP</goal>
      </goals>
    </plugin>
  </extensions>
</extensionManager>
